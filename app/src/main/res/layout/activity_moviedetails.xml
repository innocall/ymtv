<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lemon95_main_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/px138"
    android:paddingRight="@dimen/px168">

    <LinearLayout
        android:id="@+id/lemon_movie_details_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px150">

            <TextView
                android:id="@+id/lemon95_movie_title_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:nextFocusDown="@+id/details_play"
                android:paddingLeft="@dimen/px36"
                android:paddingTop="@dimen/px63"
                android:text="@string/lemon95_movie"
                android:textColor="@color/lemon_b3aeae"
                android:focusableInTouchMode="true"
                android:nextFocusUp="@+id/details_item1"
                android:nextFocusLeft="@+id/details_item1"
                android:nextFocusRight="@+id/details_item1"
                android:textSize="@dimen/px39"
                android:textStyle="bold" />

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-light"
                android:format12Hour="hh:mm"
                android:format24Hour="HH:mm"
                android:paddingTop="@dimen/px63"
                android:textColor="@color/lemon_b3aeae"
                android:textSize="@dimen/px39"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/movie_details_img_id"
                android:layout_width="@dimen/px357"
                android:layout_height="@dimen/px482"
                android:scaleType="fitXY"
                android:src="@drawable/lemon_details_def" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px36"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/movie_details_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/lemon_3df1ed"
                    android:textSize="@dimen/px36" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px12"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/movie_details_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/lemon_dcdcdc"
                        android:textSize="@dimen/px30" />

                    <TextView
                        android:id="@+id/movie_details_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px40"
                        android:textColor="@color/lemon_dcdcdc"
                        android:textSize="@dimen/px30" />
                </LinearLayout>

                <TextView
                    android:id="@+id/movie_details_direct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px12"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/lemon_dcdcdc"
                    android:textSize="@dimen/px30" />

                <TextView
                    android:id="@+id/movie_details_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px12"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/lemon_dcdcdc"
                    android:textSize="@dimen/px30" />

                <TextView
                    android:id="@+id/movie_details_descri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px12"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.2"
                    android:lines="3"
                    android:textColor="@color/lemon_dcdcdc"
                    android:textSize="@dimen/px30" />

                <com.lemon95.androidtvwidget.view.MainLayout
                    android:id="@+id/main_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <com.lemon95.androidtvwidget.view.ReflectItemView
                        android:id="@+id/details_play"
                        android:layout_width="@dimen/px279"
                        android:layout_height="@dimen/px78"
                        android:layout_marginLeft="@dimen/px20"
                        android:layout_marginRight="@dimen/px24"
                        android:layout_marginTop="@dimen/px27"
                        android:layout_marginBottom="@dimen/px12"
                        android:clickable="true"
                        android:focusable="true"
                        android:nextFocusDown="@+id/details_item1"
                        app:isShape="true"
                        app:radius="@dimen/px8">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="@dimen/px279"
                                android:layout_height="@dimen/px78"
                                android:scaleType="fitXY"
                                android:src="@drawable/lemon_anniu_03" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:scaleType="fitXY"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/lemon_tubiao_08" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/lemon_play"
                                    android:textColor="#FFFFFF"
                                    android:layout_marginLeft="@dimen/px12"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/px40"/>

                            </LinearLayout>
                        </FrameLayout>
                    </com.lemon95.androidtvwidget.view.ReflectItemView>

                    <com.lemon95.androidtvwidget.view.ReflectItemView
                        android:id="@+id/details_sc"
                        android:layout_width="@dimen/px279"
                        android:layout_height="@dimen/px78"
                        android:layout_marginLeft="@dimen/px344"
                        android:layout_marginRight="@dimen/px24"
                        android:layout_marginTop="@dimen/px27"
                        android:layout_marginBottom="@dimen/px12"
                        android:clickable="true"
                        android:focusable="true"
                        android:nextFocusDown="@+id/details_item1"
                        app:isShape="true"
                        app:radius="@dimen/px8">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="@dimen/px279"
                                android:layout_height="@dimen/px78"
                                android:scaleType="fitXY"
                                android:src="@drawable/lemon_anniu_03" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:scaleType="fitXY"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/lemon_tubiao_11" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/lemon_sc"
                                    android:textColor="#FFFFFF"
                                    android:layout_marginLeft="@dimen/px12"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/px40"/>

                            </LinearLayout>
                        </FrameLayout>
                    </com.lemon95.androidtvwidget.view.ReflectItemView>

                    <com.lemon95.androidtvwidget.view.ReflectItemView
                        android:id="@+id/details_serial"
                        android:layout_width="@dimen/px279"
                        android:layout_height="@dimen/px78"
                        android:layout_marginLeft="@dimen/px667"
                        android:layout_marginRight="@dimen/px24"
                        android:layout_marginTop="@dimen/px27"
                        android:layout_marginBottom="@dimen/px12"
                        android:clickable="true"
                        android:focusable="true"
                        android:nextFocusDown="@+id/details_item1"
                        android:nextFocusRight="@null"
                        app:isShape="true"
                        android:visibility="gone"
                        app:radius="@dimen/px8">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="@dimen/px279"
                                android:layout_height="@dimen/px78"
                                android:scaleType="fitXY"
                                android:src="@drawable/lemon_anniu_03" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:scaleType="fitXY"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/lemon_serial" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/lemon_serial"
                                    android:textColor="#FFFFFF"
                                    android:layout_marginLeft="@dimen/px12"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/px40"/>

                            </LinearLayout>
                        </FrameLayout>
                    </com.lemon95.androidtvwidget.view.ReflectItemView>

                </com.lemon95.androidtvwidget.view.MainLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px21"
            android:layout_marginTop="@dimen/px24"
            android:text="@string/lemon_movie_details_msg"
            android:textColor="@color/lemon_dcdcdc"
            android:textSize="@dimen/px30" />

        <include layout="@layout/details_item"></include>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/lemon_movie_details_pro"
        android:layout_width="@dimen/px150"
        android:layout_height="@dimen/px150"
        android:layout_gravity="center"/>

    <!-- 最顶层的边框移动 -->
    <com.lemon95.androidtvwidget.view.MainUpView
        android:id="@+id/mainUpView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.lemon95.androidtvwidget.view.MainUpView>
</FrameLayout>